# ========================================
# ELMS BACKEND ENVIRONMENT CONFIGURATION
# ========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Development: PostgreSQL (Docker)
DATABASE_URL="postgresql://elms_user:elms_password@localhost:5432/elms_dev"

# Production: PostgreSQL (Docker)
# DATABASE_URL="postgresql://elms_user:elms_password@localhost:5433/elms_prod"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Frontend Configuration (for CORS)
FRONTEND_URL="http://localhost:3000"

# Email Configuration (for password reset, verification, etc.)
EMAIL_SERVICE="gmail"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="ELMS System <noreply@elms.edu>"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_DIR="./uploads"

# Redis Configuration (for sessions, caching)
REDIS_URL="redis://localhost:6379"

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this-in-production"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/elms.log"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Two-Factor Authentication
TOTP_SERVICE_NAME="ELMS"
TOTP_ISSUER="University ELMS System"

# External Services
QR_CODE_SERVICE="internal"
SMS_SERVICE="twilio"
SMS_ACCOUNT_SID="your-twilio-account-sid"
SMS_AUTH_TOKEN="your-twilio-auth-token"
SMS_FROM_NUMBER="+1234567890"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION="./backups"

# Development Settings
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=true
ENABLE_DEV_TOOLS=true

# Production Settings (comment out in development)
# SSL_CERT_PATH="/path/to/ssl/cert.pem"
# SSL_KEY_PATH="/path/to/ssl/key.pem"
# SECURE_COOKIES=true
# TRUST_PROXY=true
