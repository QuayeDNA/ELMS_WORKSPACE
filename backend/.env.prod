# ========================================
# ELMS BACKEND PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
# Production: PostgreSQL (Docker)
DATABASE_URL="postgresql://elms_user:elms_password@localhost:5433/elms_prod"

# JWT Configuration
JWT_SECRET="CHANGE_THIS_IN_PRODUCTION_TO_A_SECURE_RANDOM_STRING"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Frontend Configuration (for CORS)
FRONTEND_URL="https://your-production-domain.com"

# Email Configuration (for password reset, verification, etc.)
EMAIL_SERVICE="gmail"
EMAIL_USER="your-production-email@gmail.com"
EMAIL_PASS="your-production-app-password"
EMAIL_FROM="ELMS System <noreply@elms.edu>"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_DIR="./uploads"

# Redis Configuration (for sessions, caching)
REDIS_URL="redis://localhost:6379"

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="CHANGE_THIS_IN_PRODUCTION_TO_A_SECURE_RANDOM_STRING"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/elms.log"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Two-Factor Authentication
TOTP_SERVICE_NAME="ELMS"